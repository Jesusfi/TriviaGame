<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customRadioStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/question_button</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/possibleAnswerTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="resultsDisplayedStyle">
        <item name="android:layout_marginTop">2dp</item>

    </style>



    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_white_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
